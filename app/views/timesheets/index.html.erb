<p id="notice"><%= notice %></p>

<h1>Listing Timesheets</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timesheets.each do |timesheet| %>
      <tr>
        <td><%= timesheet.type %></td>
        <td><%= timesheet.name %></td> 
        <td><%= timesheet.updated_at %></td> 
        <td><%= link_to 'Draft', draft_accepted_timesheet_path(timesheet), method: :post %></td>
        <td><%= link_to 'Submit', submit_draft_timesheet_path(timesheet), method: :post %></td>
        <td><%= link_to 'Accept', accept_submitted_timesheet_path(timesheet), method: :post %></td>
        <td><%= link_to 'Destroy', timesheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

